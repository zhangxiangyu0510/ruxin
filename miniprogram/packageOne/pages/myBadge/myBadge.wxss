/* pages/ucenter/myBadge/myBadge.wxss */
page {
  min-height: 100%;
  background: #fafafa;
}
.badge{

}
.badge_header{
  width:100%;
  height: 164rpx;
  background: #FFF;
  padding:32rpx;
  box-sizing: border-box;
  display: flex;
  position:relative;
  border-top:1rpx solid rgba(0, 0, 0, 0.1);
}
.badge_header_avater{
  height:100rpx;
  width:100rpx;
  overflow: hidden;
  border-radius: 8rpx;
  /* background: #000; */
}
.badge_header_avater image{
    width: 100%;
    height: 100%;
}
.badge_header_infos{
  width:530rpx;
  /* background: #f1f1f1; */
  height:120rpx;
  margin-left:24rpx;
}
.badge_infos_name{
  display: flex;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #000;
}
.badge_infos_name text{
    
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shopowenr_top_header_img {
  width: 44rpx;
  height: 44rpx;
  /* background: #FF5E00; */
  /* float: left; */
  margin-left: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 4rpx;
}
.shopowenr_top_header_img image{
    width: 40rpx;
    height: 100%;
}
.badge_infos_fans{
  display: flex;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #7F7F7F;
  margin-top:16rpx;
}
.shopowenr_info3{
  margin-left: 48rpx;
}
.badge_infos_day{
  display: inline-block;
  margin:0 8rpx;
  font-family: DIN Alternate;
  font-style: normal;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 42rpx;  
  color: #FF5E00;
  flex: none;
  order: 1;
  flex-grow: 0;
}
.badge_single_box{
  margin:64rpx 32rpx 0 32rpx;
}
.speMargin{
  margin-top:64rpx !important;
}
.badge_single_box_title{
  font-family: PingFang SC;
  font-style: normal;
  font-weight: 600;
  font-size: 40rpx;
  line-height: 56rpx;
  color: #404040;
  margin:32rpx 0;
  }
  .badge_single_box_items{
    /* height:412rpx; */
    width:100%;
    background: #fff;
    border-radius: 16rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    /* justify-content: space-between; */
    box-sizing: border-box;
    padding:32rpx;

  }
  .badge_single_item{
    width:130rpx;
    height:132rpx;
    /* background: red; */
    position: relative;

  }
.badge_single_item_have_margin{
  /* width:130rpx; */
  width: 25%;
  height:132rpx;
  /* background: red; */
  position: relative;
  margin-bottom:48rpx;
}
.badge_single_item_no_margin{
  width:130rpx;
  height:132rpx;
  /* background: red; */
  position: relative;
  margin-right: 34rpx;
}
.badge_single_item_no_margin:nth-child(4n){
    margin-right: 0;
}
  .badge_item_icon{
    position:absolute;
    height:100rpx;
    width:100rpx;
    /* background: #000; */
    top:0;
    left:50%;
    transform: translateX(-50%);
  }
  .badge_item_icon image{
    width: 100%;
    height: 100%;
  }
  .badge_item_text{
    width:140rpx;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #333333;
    text-align: center;
    position: absolute;
    bottom:0;
    left:50%;
    transform: translateX(-50%);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }